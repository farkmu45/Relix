<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./style.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" rel="stylesheet">
    <title>Document</title>
</head>

<body class="container container--home">
    <header class="header">
        <nav class="navigation">
            <ul class="navigation__container">
                <li class="navigation__item">
                    <a href="/" class="navigation__link navigation__link-active">Home</a>
                </li>
                <li class="navigation__item">
                    <a href="/" class="navigation__link">News</a>
                </li>
                <li class="navigation__item">
                    <a href="/" class="navigation__link">About</a>
                </li>
            </ul>
        </nav>
        <section class="jumbo jumbo--image">
            <div class="jumbo__container"></div>
        </section>
        <section class="jumbo jumbo--text">
            <h1 class="heading--1 bc--white color--black">Relix</h1>
            <h4 class="heading--4">Your News</h4>
        </section>
        <div class="continue">
            <svg class="continue__icon">
                <use xlink:href="./img/sprite.svg#icon-circle-down"></use>
            </svg>
        </div>
    </header>
    <main class="content">
        <h1 class="heading--1 color--black" style="text-align: center">The only news source you need</h1>
        <h5 class="heading--5">For Asian Games 2018</h5>
        <div class="mascot">
            <div class="mascot__container">
                <img src="./img/mascot--1.png" alt="" class="mascot__image">
            </div>
            <div class="mascot__container">
                <img src="./img/mascot--2.png" alt="" class="mascot__image">
            </div>
            <div class="mascot__container">
                <img src="./img/mascot--3.png" alt="" class="mascot__image mascot__pad">
            </div>
        </div>
    </main>
    <section class="main">
        <h1 class="heading--1">Latest News</h1>
        <svg class="main__icon">
            <use xlink:href="./img/sprite.svg#icon-keyboard_arrow_down"></use>
        </svg>
    </section>
    <div class="latest">
        <% data.forEach((item) => { %>

            <div href="/news" class="card card--hover">
                <div class="card__wrapper">
                    <img src="<%= item.pic %>" class="card__image" alt="">
                </div>
                <div class="card__action">
                    <p class="card__heading">
                        <%= item.name %>
                    </p>
                    <p class="card__details">29 March</p>
                    <p class="card__content">
                        <%= item.content %>
                    </p>
                    <form action="news/<%= item._id %>?_method=delete" method="post">
                        <button type="submit" class="form__submit">Delete</button>
                    </form>
                    <a href="news/<%= item._id %>/edit" style="display: inline-block">Edit</a>
                    <a href="news/<%= item._id %>" style="display: inline-block">More</a>
                </div>
            </div>
            <!-- <form action="comment/" method="post"></form> -->
            <% })%>
    </div>
</body>

</html>